script.
	//初期化
	//$( "#headerMenu__topic" ).css("background","rgba(0, 0, 0, 0.1)");
	$( "#categoryContent" ).css("display","none");
	$( "#brandContent" ).css("display","none");
	$( "#topicContent" ).css("display","none");
	$( "#js-menu-tops" ).css("background","#fff");
	
	
	var spMenuHidden = true;
	var body = $(document.body);
	var menu = $( '.menu' );
	var navIcon = $( '.fa-bars' );
	var closeIcon = $( '.fa-times' );

	$('#js-sp-menu').click(function() {

		if(spMenuHidden) {
			
			body.animate({'left' : "100%" }, 300);
			menu.animate({'left' : 0 }, 300);
			navIcon.css("display", "none");
			closeIcon.css("display", "inline-block");
			spMenuHidden = false;
	
		} else {

			body.animate({'left' : 0 }, 300);
			menu.animate({'left' : "-100%" }, 300);
			navIcon.css("display", "inline-block");
			closeIcon.css("display", "none");
			spMenuHidden = true;
		}
	

	});



	$("#categoryContent").mouseleave(function() {
		$( "#categoryContent" ).css("display","none");
		$( "#brandContent" ).css("display","none");
		$( "#topicContent" ).css("display","none");
		$( "#headerMenu__category" ).css("background","url(http://www.rakuten.ne.jp/gold/auc-rodeo/images/header-nav-bg.jpg) repeat-x bottom/contain");
	});

	$("#brandContent").mouseleave(function() {
		$( "#categoryContent" ).css("display","none");
		$( "#brandContent" ).css("display","none");
		$( "#topicContent" ).css("display","none");
		$( "#headerMenu__brand" ).css("background","url(http://www.rakuten.ne.jp/gold/auc-rodeo/images/header-nav-bg.jpg) repeat-x bottom/contain");
	});

	$("#topicContent").mouseleave(function() {
		$( "#categoryContent" ).css("display","none");
		$( "#brandContent" ).css("display","none");
		$( "#topicContent" ).css("display","none");
		$( "#headerMenu__topic" ).css("background","url(http://www.rakuten.ne.jp/gold/auc-rodeo/images/header-nav-bg.jpg) repeat-x bottom/contain");
	});

	//categoryクリックしたとき
	$( "#headerMenu__category" ).hover(function() {
		$(".headerMenu li").css("background","url(http://www.rakuten.ne.jp/gold/auc-rodeo/images/header-nav-bg.jpg) repeat-x bottom/contain");
		$(this).css("background","rgba(0, 0, 0, 0.1)");
		$( "#categoryContent" ).css("display","block");
		$( "#brandContent" ).css("display","none");
		$( "#topicContent" ).css("display","none");
		$( "#js-tops" ).css("display", "block");
	});

	//brandクリックしたとき
	$( "#headerMenu__brand" ).hover(function() {
		$(".headerMenu li").css("background","url(http://www.rakuten.ne.jp/gold/auc-rodeo/images/header-nav-bg.jpg) repeat-x bottom/contain");
		$(this).css("background","rgba(0, 0, 0, 0.1)");
		$( "#categoryContent" ).css("display","none");
		$( "#brandContent" ).css("display","block");
		$( "#topicContent" ).css("display","none");
	});

	//topicsクリックしたとき
	$( "#headerMenu__topic" ).hover(function() {
		$(".headerMenu li").css("background","url(http://www.rakuten.ne.jp/gold/auc-rodeo/images/header-nav-bg.jpg) repeat-x bottom/contain");
		$(this).css("background","rgba(0, 0, 0, 0.1)");
		$( "#categoryContent" ).css("display","none");
		$( "#brandContent" ).css("display","none");
		$( "#topicContent" ).css("display","block");
	});

	//カテゴリー
	$( "#js-menu-tops" ).click(function() {
		$(".headerCategoryList__menu li").css("background","#f7f8f7");
		$(this).css("background","#fff");
		$( "#js-content-tops" ).css("display","block");
		$( "#js-content-outer" ).css("display","none");
		$( "#js-content-bottoms" ).css("display","none");
